@code {
    #pragma warning disable 4014, 1998, 039, CSS041
    static public string BoolStyle(bool b) => b ? "coolButtonX" : "coolButton";

    static public string TextColor
    {
        get;
        set;
    } = ConsoleColor.White.ToString();
    static public string TextColor2
    {
        get;
        set;
    } = ConsoleColor.Yellow.ToString();
}
<style>
    * {
        --BC: 240;
        --CI: 15%;
        --BDark: 10%;
        --BLight: 30%;
        --TextColor: @TextColor;
        --TextColor2: @TextColor2;
        color: var(--TextColor);
        font-family: 'Rockwell';
    }

    html {
        font-size: 18px;
    }
    :root {
        --GradientBody: linear-gradient(to left, hsl(var(--BC),var(--CI),var(--BDark)), hsl(var(--BC),var(--CI),var(--BLight) ));
        --GradientEven: linear-gradient(to bottom right, hsl(var(--BC),var(--CI),var(--BDark)), hsl(var(--BC),var(--CI),20%)); 
 
    }
    body {
        background-image: var(--GradientBody);
      
     
    }
    .coolButton, .coolSelect, .coolButtonX {
        background-color: transparent;
        border-radius: 0.2rem;
        border: 0.1rem solid lightgray; /*var(--ControlColor);*/
        margin: 0.1rem;

    }
    .coolButtonX {
        border: 0.1rem solid red; /*var(--ControlColor);*/
        color:var(--TextColor2);
    }

    .coolButton:hover, .coolSelect:hover {
        border: 0.1rem solid red;
    }

    option {
        color: black;
    }

    .coolDiv {
        border: 0.05rem solid gray; /*var(--ControlColor);*/
        margin: 0.2rem;
    }

    .coolSelect {
        padding: 0.2rem 0.1rem;
    }

    .imgSmileyButton, .xsequental, .xrandom {
        height: 1.2rem;
        margin: 0rem 0rem 0.2rem 0rem;
    }

    .imgSmileyButton:hover {
        border: 0.15rem solid red;
        border-radius: 100%;
    }

    .btn_ghost {
        width: 0.2rem;
        height: 0.5rem;
        padding: 0;
        margin: 0;
        background-color: transparent;
        border: 0px;
    }


    table.g_blueTable
    {
        margin:1rem 0rem;
    }

    table.g_blueTable td, table.g_blueTable th {
        padding: 1px 1px;
        width: 33%;
        white-space: nowrap;
    }

    table.g_blueTable tr:nth-child(even) {
        background-image: var(--GradientEven);
        color: white;
    }


    table.g_blueTable thead th {
        color: var(--TextColor);
        font-weight: 700;
        background-image: var(--GradientEven);
    }

 
</style>

